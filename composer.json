{
    "name": "gogilo/lpdm",
    "description": "Laravel Package Development Manager.",
    "keywords": [
        "laravel",
        "package"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "George Ogilo",
            "email": "gogilo2003@hotmail.com"
        }
    ],
    "require": {
        "php": "^7.3|^8.0",
        "symfony/console": "^4.0|^5.0|^6.0",
        "symfony/process": "^4.2|^5.0|^6.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.0|^9.3"
    },
    "bin": [
        "bin/lpdm"
    ],
    "autoload": {
        "psr-4": {
            "Gogilo\\Lpdm\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Gogilo\\Lpdm\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true
    }
}
